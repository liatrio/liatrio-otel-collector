{
  "version": "0.3.0",
  "configurations": [
    
    {
      "name": "Launch Otel Collector in debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/build",
      "program": "${workspaceFolder}/build",
      "args": [
        "--config",
        "../config/config.yaml"
      ],
      "envFile": "${workspaceFolder}/.debug.env"
    },
    {
      "name": "Launch Otel Collector in debug (backstage)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/build",
      "program": "${workspaceFolder}/build",
      "args": [
        "--config",
        "../config/config-backstage.yaml"
      ]
    }
  ]
}
