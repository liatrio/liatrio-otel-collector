{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "createDebugDir",
      "type": "shell",
      "command": "mkdir",
      "args": [
        "-p",
        "${workspaceFolder}/.debug"
      ]
    },
    {
      "label": "deleteDebugDir",
      "type": "shell",
      "command": "rm",
      "args": [
        "-r",
        "${workspaceFolder}/.debug"
      ]
    }
  ]
}